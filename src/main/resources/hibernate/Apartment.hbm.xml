<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="src/main/resources/hibernate">
    <class name="Apartment" table="apartment">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="address" column="address" />
        <property name="area" column="area" />

        <set name="persons" table="persons_apartments" cascade="save-update">
            <key column="id"/>
            <many-to-many column="apartment_id" class="Apartments" />
        </set>
    </class>
</hibernate-mapping>